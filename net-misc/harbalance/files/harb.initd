start() {
  checkpath -f ${LOGFILE} -o ${USER}
  start-stop-daemon --start --exec harb --pidfile ${PIDFILE} --user haproxy:haproxy --progress --background --make-pidfile -1 ${LOGFILE} -2 ${LOGFILE} --wait 2000 -- ${ARGS}
}

stop() {
  start-stop-daemon --stop --exec harb --pidfile ${PIDFILE} --user ${USER}:${GROUP} --progress -1 ${LOGFILE} -2 ${LOGFILE} --retry SIGTERM/5 -- ${ARGS}
}

